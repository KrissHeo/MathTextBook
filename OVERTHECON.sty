\ifthenelse{\equal{#1}{}}
  {\ifthenelse{\equal{#3}{0}}{}{\index{#2}\textbf{#2}}}
  {\ifthenelse{\equal{#3}{1}}
    {\index{#1!#2}\textbf{#1}}
    {\ifthenelse{\equal{#3}{2}}
      {\index{#1!#2}\textbf{#2}}
      {\ifthenelse{\equal{#3}{3}}
        {\index{#1}\textbf{#2}}
        {\ifthenelse{\equal{#3}{0}}{\index{#1!#2}}{}%
        }%
      }%
    }%
  }%
}

